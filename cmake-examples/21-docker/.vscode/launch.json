{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Remote Attach with GDBServer",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/app/long_running",
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",     // GDB в контейнері
            "miDebuggerServerAddress": "127.0.0.1:9999",
            "cwd": "${workspaceFolder}",
            "externalConsole": false,
            "sourceFileMap": {
                "/app": "${workspaceFolder}"      // /app в контейнері відповідає локальній теці
            }
        }
    ]
}
